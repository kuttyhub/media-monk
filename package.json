{
  "name": "media-monks",
  "version": "1.0.0",
  "description": "Round 1 interview",
  "main": "js/index.ts",
  "devDependencies": {
    "concurrently": "^7.6.0",
    "es-dev-server": "^2.1.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.57.1",
    "tsc": "^2.0.4",
    "typescript": "^4.9.4"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-ts": "tsc",
    "build-sass": "sass src/styles",
    "build-prod-sass": "sass src/styles:dist/styles --style=compressed",
    "build-prod-ts": "tsc --outDir dist/js",
    "build-prod-assets": "cp -r ./src/assets ./dist/assets",
    "build-prod-html": "cp -v src/*.html dist/",
    "build": "npm-run-all build-prod-ts build-prod-sass build-prod-assets build-prod-html",
    "watch-ts": "tsc --watch",
    "watch-scss": "sass src/styles --watch",
    "watch-http": "parcel src/index.html",
    "start": "concurrently --kill-others 'npm:watch-*'"
  },
  "author": "Nishanth S",
  "license": "ISC",
  "dependencies": {
    "parcel-bundler": "^1.12.5"
  }
}
